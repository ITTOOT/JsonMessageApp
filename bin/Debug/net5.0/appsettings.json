// Default application settings - get overwritten by the environment config
{
  // Production server
  // JWT - Used to sign and verify JWT tokens, change to your own security string so no one else can generate a JWT
  "AppSettings": {
    "Secret": "StandardSecretKey", //"REPLACE WITH YOUR SECRET SIGNITURE"
    "RefreshTokenTTL": 2,
    "MirrorOnPost": true
  },
  // Production server
  // Connection string for databasec
  "ConnectionStrings": {
    "WebApiDatabase": "Data source=LocalDatabase.db" //"ENTER PRODUCTION SERVER DATABASE CONNECTION STRING HERE"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "TestAuth": {
    "Domain": "PUT_YOUR_TEST_AUTH_DOMAIN_HERE",
    "Audience": "PUT_YOUR_TEST_AUDIENCE_UNIQUE_IDENTIFIER_HERE"
  }
}

